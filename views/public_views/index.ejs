<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap" rel="stylesheet">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/index.css">
    <title><%= kluby.jmeno %></title>
    <link rel="icon" href="/img/<%= kluby.icona %>">
</head>
<body class="d-flex flex-column">
    <%- include('./universal_components/nav', { kluby, kategorie, tymy, id_kategorie }) %>

      <div class="container pt-4">
        <div class="row align-items-stretch mx-auto container-xl home">
          <div class="col-xl-7"> <!--Media-->
            <% prispevky.forEach(item => { %> 
              <div class=""> <!--prispevek-->
                <div class="row g-0 overflow-hidden flex-md-row mb-4 h-md-250 position-relative">
                  <h3 class="mb-0 title-home"><%= item.nadpis %></h3>
                  <div class="col-auto me-4 d-lg-block">
                    <img class="img-fluid" src="/img/<%= item.cesta %>" alt="Foto" width="450px">
                  </div>
                  <div class="col d-flex flex-column position-static caption-home">
                    <p class="caption-home-p"><%= item.popisek %></p>
                  </div>
                </div>
              </div>
            <% }); %>


            <div class=""> <!--sipka-->
              <a href="/media" class="row mb-5 g-0 overflow-hidden flex-md-row mb-4 h-md-250 align-items-center position-relative media-link">
                <i class="fa-solid fa-2x primary_color fa-arrow-right-to-bracket"></i>
              </a>
            </div>
            
          </div>
          <div class="col-xl-5"> <!--Akce-list-->
            <div class="akce-box borderl position-sticky" style="top: 2rem;">
              <h2>Nadcházející akce</h2>
              <ul class="akce-list">

                <li class="borderl akce"> <!--Akce-->
                  <div>
                    <p>8. 10. 2023</p>
                    <h4>U20 - Volejbal Sokolov XXXX</h4>
                  </div>
                </li>
                
                <li class="borderl akce"> <!--Akce-->
                  <div>
                    <p>8. 10. 2023</p>
                    <h4>U20 - SKV Usti n.L.</h4>
                  </div>
                </li>
                
                <li class="borderl akce"> <!--Akce-->
                  <div>
                    <p>8. 10. 2023</p>
                    <h4>U20 - Volejbal Sokolov</h4>
                  </div>
                </li>

              </ul>
            </div>
          </div>
        </div>
      </div>
      
      <div class="container px-4 py-5 pb-5 mb-3 mt-4 pt-4 ">
        <div class="row row-cols-1 row-cols-lg-3 align-items-stretch align-items-lg-center align-items-md-center g-4 py-5 pt-0  sponzors-container bordert">
          
          <% sponzori.forEach(item => { %> 
            <a class="col sponzors" target=”_blank” href="<%= item.odkaz %>">
              <img class="img-fluid sponzor" src="/img/<%= item.logo %>" alt="sponzor">
            </a>
          <% }) %>

        </div>
      </div>

      <%- include('./universal_components/footer', { kategorie, site}) %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>