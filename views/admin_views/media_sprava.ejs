      <div class="container mt-3">
        <div class="row align-items-stretch mx-auto container-xl media">
          <div class=""> <!--Media-->
            <div class="mb-5"> <!--Plus-->
              <button class="py-3 buttplus bg_secondary_white_color" id="add" type="button">
                <i class="fa-solid fa-plus fa-2xl"></i>
              </button>
            </div>
            
          <%- include('./universal_components/media_new_popup', {tag}) %>

            <% prispevky.forEach(item => { %> 
              <div class=""> <!--prispevek-->
                <div class="prispevky_options">
                  <i class="fa-solid fa-pen" id="prispevek<%= item.id_prispevek %>"></i>
                  <i class="fa-solid fa-trash" id="prispevekDel<%= item.id_prispevek %>"></i>
                </div>
                <div class="row g-0 overflow-hidden flex-md-row mb-4 h-md-250 position-relative">
                  <div class="col-auto me-4 mb-3 d-lg-block">
                    <% item.imgs.forEach(img => { %>
                      <img class="img-fluid" src="/img/prispevky/<%= img.img %>" alt="Foto" width="800px">
                    <% }); %>
                  </div>
                  <div class="col d-flex flex-column position-static caption-media">
                    <h2 class="mb-2 title-media"><%= item.nadpis %></h2>
                    <p class="caption-media-p "><%= item.popisek %></p>
                  </div>
                </div>
              </div>
              <%- include('./universal_components/media_edit_popup', { item }) %>
              <%- include('./universal_components/media_delete_popup', { item }) %>
            <% }); %>



            <div class=""> <!--sipka-->
              <a href="#" class="row mb-5 g-0 overflow-hidden flex-md-row mb-4 h-md-250 align-items-center position-relative media-link">
                <i class="fa-solid fa-3x primary_color fa-angle-down"></i>
              </a>
            </div>
            
          </div>
          
        </div>
      </div>

      <script>
        function previewImage(inputId, previewId) {
          const preview = document.querySelector(previewId);
          const file = document.querySelector(inputId).files[0];
          const reader = new FileReader();

          reader.addEventListener("load", function () {
            // convert image file to base64 string
            preview.src = reader.result;
          }, false);

          if (file) {
            reader.readAsDataURL(file);
          }
        }
        document.getElementById('image').addEventListener('change', function () {
          previewImage('#image', '#previewImage');
        });
        
        document.querySelector('#add').addEventListener('click', function () {
          document.querySelector('#add_popup').style.display = 'block';
        });

        document.querySelector('form').addEventListener('submit', function(event) {
          var image = document.getElementById('image');
          var nadpis = document.getElementById('cname');
          var popisek = document.querySelector('textarea[name="popisek"]');
          var checkboxes = document.querySelectorAll('input[type=checkbox]');

          if (!image.value || !nadpis.value || !popisek.value || !Array.prototype.some.call(checkboxes, checkbox => checkbox.checked)) {
            event.preventDefault();
            alert('není vše vyplněno');
          }
        });

        <% prispevky.forEach(item => { %>
        document.querySelector('#prispevek<%= item.id_prispevek %>').addEventListener('click', function () {
          document.querySelector('#popupEdit<%= item.id_prispevek %>').style.display = 'block';
        });

        document.getElementById('image<%= item.id_prispevek %>').addEventListener('change', function () {
          previewImage('#image<%= item.id_prispevek %>', '#previewImage<%= item.id_prispevek %>');
        });

        document.querySelector('#prispevekDel<%= item.id_prispevek %>').addEventListener('click', function () {
          document.querySelector('#popupDel<%= item.id_prispevek %>').style.display = 'block';
        });
        <% }) %>
      </script>
      <script src="/scripts/adminPanel.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>