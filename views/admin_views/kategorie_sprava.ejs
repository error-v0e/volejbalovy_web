<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap" rel="stylesheet">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/sprava.css">
    <title><%= kluby.jmeno %></title>
    <link rel="icon" href="/img/sprava.ico">
</head>
<body class="d-flex flex-column">
  <div class="container bg_primary_color p-2 stat-box " onmouseover="toggleVisibility('logout', true), toggleVisibility('register', true)" onmouseout="toggleVisibility('logout', false), toggleVisibility('register', false)">
    <div class="px-1 pe-3" "><i class="fa-solid fa-gear fa-lg pe-1"></i> Sprava
    </div>
    <a href="/register" class="primary_color rounded p-1 nav-link" style="display: none;" id="register"><i class="fa-solid fa-solid fa-user-plus fa-lg pe-1"></i>Pridat trenera</a>
    <a href="/api/logout" class="primary_color rounded p-1 nav-link" style="display: none;" id="logout"><i class="fa-solid fa-sign-out fa-lg pe-1"></i>Odhlasit</a>
  </div>
  
  <nav class="bg_primary_color navbar navbar-expand-md container-fluid" aria-label="Fourth navbar example">
    <div class="container-xl container-fluid">
      <a class="navbar-brand " href="/sprava">
        <img class="logo" src="/img/<%= kluby.logo %>" alt="Logo" height="110">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample04"
        aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <div class="collapse navbar-collapse" id="navbarsExample04">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item">
            <a class="nav-link primary_color" aria-current="page" href="/sprava">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link bg_primary_color" href="/sprava/tymy">Týmy</a>
          </li>
          <li class="nav-item">
            <a class="nav-link bg_primary_color" href="/sprava/media">Media</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active bg_primary_color" href="/sprava/kategorie">Kategorie</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container mt-3">
    <div class="row align-items-stretch mx-auto container-xl media">
      <div class="my-3"> <!--Plus-->
        <button class="py-3 buttplus bg_secondary_white_color" id="add" type="button">
          <i class="fa-solid fa-plus fa-2xl"></i>
        </button>
      </div>

      <div class="container mt-3">
        <div class="row align-items-stretch mx-auto container-xl media">
          <div class="col-md-1 primary_color">Poradi:</div>
          <div class="col-md-2 primary_color">Nazev:</div>
          <div class="col-md-7 primary_color">Obsah:</div>
          
        </div>
      </div>
      <% kategorie.forEach(item => { %> 
        <div class="container mt-3 bordert">
          <div class="row align-items-stretch mx-auto container-xl media mt-1">
            <div class="col-md-1 primary_color p-2 pb-0">
              <!--poradi-->
              <form action="">
                <button type="submit" class="arrowBtn px-3 py-1">
                  <i class="fa-solid fa-xl fa-angle-up"></i>
                </button>
              </form>
              <form action="">
                <button type="submit" class="arrowBtn px-3 py-1">
                  <i class="fa-solid fa-xl fa-angle-down"></i>
                </button>
              </form>
            </div>
            <div class="col-md-2 primary_color p-2"><%= item.nazev %></div>
            <div class="col-md-7 primary_color popisek_tym p-2">
              <% if(item.universal_ano == 1){ %>
                <%= item.universal.obsah %>
              <%}else{ %>
                Obsah je generován automaticky
              <% } %>
            </div>
            <div class="col-md-2 prispevky_options p-2">
              <% if(item.active == 1){%>
                <i class="fa-solid fa-eye" id="kategorieDel<%= item.id_kategorie %>"></i>
              <% } else{ %>
              <i class="fa-solid fa-eye-slash" id="kategorie<%= item.id_kategorie %>"></i>
              <% } %>
              <i class="fa-solid fa-pen" id="kategorie<%= item.id_kategorie %>"></i>
              <% if(item.universal_ano == 1){ %>
              <i class="fa-solid fa-trash" id="kategorieDel<%= item.id_kategorie %>"></i>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
      

      <script>
      function previewImage(inputId, previewId) {
        const preview = document.querySelector(previewId);
        const file = document.querySelector(inputId).files[0];
        const reader = new FileReader();

        reader.addEventListener("load", function () {
          // convert image file to base64 string
          preview.src = reader.result;
        }, false);

        if (file) {
          reader.readAsDataURL(file);
        }
      }
        document.querySelector('#add').addEventListener('click', function () {
          document.querySelector('#add_popup').style.display = 'block';
        });
        
        

        
      </script>
      <script src="/scripts/adminPanel.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>