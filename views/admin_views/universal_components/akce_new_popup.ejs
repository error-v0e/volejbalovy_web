<div class="row-cols-1 row-cols-lg-3" id="add_popup" style="display: none;">
  <div class="popup media">
    <form method="post" action="/api/add_akce">
      <div class="action"><!--Ulozit-->
        <a class="butt-dis butt mb-1" href="/sprava/">Zahodit zmÄ›ny</a>
        <input class="butt-sub butt" type="submit" value="Ulozit">
      </div>
      <div class="prispevekEdit my-2">
        <div class="primary_color">
          <label for="nadpis">Nazev:</label><br>
          <input class="cname primary_color" type="text" id="nadpis" name="nadpis" value="" required><br>
        </div>
        <div class="primary_color mb-2">
          <label>Tag:</label><br>
          <% tag.forEach(item=> { %>
            <input type="checkbox" class="btn-check" id="btncheck<%= item.nazev %>" name="tag"
              value="<%= item.id_tag %>" autocomplete="off">
            <label class="btn btn-outline-primary primary_color" for="btncheck<%= item.nazev %>">
              <%= item.nazev %>
            </label>
            <% }); %>
        </div>
        <div class="primary_color">
          <label class="mb-1">Datum:</label><br>
          <input class="primary_color" type="datetime-local" name="start" required />
          <input class="primary_color" type="datetime-local" name="end" required />
        </div>
      </div>
    </form>
  </div>
</div>
